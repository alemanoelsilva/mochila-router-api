{
  "name": "mochila-router-api",
  "version": "1.0.0",
  "description": "API for project by study and development using nodejs and react and react-native for building apps mobile native and web",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test:coverage": "NODE_ENV=test jest --silent --runInBand --coverage --forceExit ./api/**/*.spec.js",
    "test:unit": "NODE_ENV=test jest --coverage --runInBand --forceExit ./api/**/*.unit.spec.js",
    "test:integration": "NODE_ENV=test jest --runInBand --coverage --forceExit ./api/**/*.integration.spec.js",
    "test": "npm run test:coverage"
  },
  "author": "Alexandre Manoel da Silva",
  "license": "ISC",
  "dependencies": {
    "bunyan": "^1.8.12",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "joi": "^14.3.0",
    "moment": "^2.23.0",
    "nodemon": "^1.18.2",
    "pg": "^7.4.3",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.38.0"
  },
  "devDependencies": {
    "jest": "^22.4.3",
    "jest-plugin-context": "^2.9.0",
    "supertest": "^3.1.0"
  },
  "jest": {
    "verbose": true,
    "testURL": "http://localhost/",
    "setupTestFrameworkScriptFile": "./test/setup.js",
    "collectCoverageFrom": [
      "api/**/*.js",
      "!**/node_modules/**",
      "!**/config/**"
    ],
    "coverageReporters": [
      "text",
      "text-summary",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "setupFiles": [
      "jest-plugin-context/setup"
    ]
  }
}
